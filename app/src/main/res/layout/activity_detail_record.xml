<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5E5E5E"
    tools:context=".DetailRecordActivity">

    <ImageView
        android:id="@+id/image_sign"
        android:layout_width="112dp"
        android:layout_height="94dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteY="174dp" />

    <Spinner
        android:id="@+id/spinner_sign"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/bg_text_field"
        android:gravity="center" />

    <Spinner
        android:id="@+id/spinner_worker_Photo"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:paddingLeft="5dp"
        android:layout_marginStart="160dp"
        android:layout_marginTop="125dp"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:background="@drawable/bg_text_field" />

    <Spinner
        android:id="@+id/spinner_worker_Build"
        android:layout_width="180dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="25dp"
        android:gravity="center"
        android:background="@drawable/bg_text_field" />

    <Button
        android:id="@+id/btn_OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="75dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/conner_round_button"
        android:text="OK" />

    <Button
        android:id="@+id/btn_No"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="241dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/conner_round_button"
        android:text="cancel" />

    <Button
        android:id="@+id/btn_date_Photo"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/bg_text_field"
        android:paddingLeft="20dp"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        tools:text="Choose Date" />

    <Button
        android:id="@+id/btn_date_Build"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="275dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/bg_text_field"
        android:paddingLeft="20dp"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        tools:text="Choose Date" />

    <TextView
        android:id="@+id/camaraman_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="290dp"
        android:text="Cameraman:"
        android:textAlignment="textEnd"
        android:textColor="#F4F5A2"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/builder_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="235dp"
        android:layout_marginEnd="290dp"
        android:text="Builder:"
        android:textAlignment="textEnd"
        android:textColor="#F4F5A2"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/cameraFinishDate_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="290dp"
        android:text="Finish Date:"
        android:textAlignment="textEnd"
        android:textColor="#F4F5A2"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/buildFinishDate_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="290dp"
        android:text="Finish Date:"
        android:textAlignment="textEnd"
        android:textColor="#F4F5A2"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/detail_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="394dp"
        android:layout_marginEnd="290dp"
        android:text="Detail:"
        android:textAlignment="textEnd"
        android:textColor="#F4F5A2"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/pictureLocation_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="289dp"
        android:text="Picture:"
        android:textAlignment="textEnd"
        android:textColor="#F4F5A2"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/Location_imageButton"
        android:layout_width="224dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="87dp"
        android:scaleType="fitCenter"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <Button
        android:id="@+id/button_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="330dp"
        android:layout_marginEnd="10dp"
        android:maxLines="1"
        android:text="Location"
        android:background="@drawable/bg_text_field" />

    <EditText
        android:id="@+id/detail_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="160dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="335dp"
        android:ems="10"
        android:gravity="top"
        android:hint="other"
        android:inputType="textMultiLine|text"
        android:lines="3"
        android:maxLines="3"
        android:textColor="#C4C4C4"
        android:textColorHint="#C4C4C4" />
</RelativeLayout>